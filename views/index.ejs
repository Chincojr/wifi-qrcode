<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Qr Code Gen</title>
    <link rel="stylesheet" href="style.css">
    <link rel="icon" href="icon.ico">
    </head>
<body>
    <nav class="nav-bar">Wifi QR Code Generator</nav>
    
    <div class="wrapper">
    <form action="/qrcode" method="post">
        <div class="inside-wrapper">
        <div class="form-name-container">
            <h1 class="form-name">Create Wifi QR Code</h1>   
        </div>
        <div class="container">
            <div class="input-element">
                <label>
                    SSID:
                    <input  class= 'input-text' type="text"  name="ssid" >
                </label>
            </div>
            <div class="input-element">
                <label>
                    Encryption
                    <select class= 'input-text' name="encryption" id="selection" required>
                        <option value="">----  Encryption type ----</option>
                        <option value="WPA">WPA/WPA2/WPA3</option>
                        <option value="WEP">WEP</option>
                        <option value="None">None</option>
                    </select>
                </label>
            </div>
            <div class="input-element">
                <label>
                    Password:
                    <input class= 'input-text' type="password" name="password" required>
                </label>
            </div>
            <div class="input-element input-checkbox">
                <label>
                    Hidden
                    <input  type="checkbox" name="checkbox" value="true"  >
                </label>
            </div>
            <div class="input-element input-button">
                <button type="submit" onsubmit=" return validateForm()">Generate</button>
            </div>

            <script>
                const validateForm = () => {
                    var ssid = document.getElementsByName('ssid')
                    if(ssid == ''){
                        alert('plz input wifi name')
                        return false
                    }
                    
                }
            </script>
        </div>
        </div>

    </form>
    </div>



</body>
</html>